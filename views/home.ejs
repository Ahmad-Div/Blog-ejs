<%- include("partials/header") -%>

    <div class="page-content">
        <h1>Home</h1>
        <h3>
            <%=homeContent%>
        </h3>
        <div class="posts">

            <% posts.forEach(post=> { %>
                <div class="post">
                    <h2 class="post-title">
                        <%=post.postTitle%>
                    </h2>
                    <p class="post-content">
                        <%=post.postContent.substring(0,100) + " ... " %>
                            <a href=<%="post/" + post.postTitle + "" %>>Read More</a>
                    </p>
                    <hr>
                </div>
                <% }) %>
        </div>
    </div>


    <%- include("partials/footer") -%>